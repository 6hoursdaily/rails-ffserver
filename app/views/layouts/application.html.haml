!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "Rails FFServer", :name => "description"}/
    %meta{:content => "6hoursdaily", :name => "author"}/
    %link{:href => "/favicon.ico", :rel => "icon"}/
    %title= "#{@title}Rails FFserver"
    = stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag "application", 'data-turbolinks-track': 'reload'
    %link{:href => "https://vjs.zencdn.net/5.4.6/video-js.min.css", :rel => "stylesheet"}/
    %script{:src => "https://vjs.zencdn.net/5.4.6/video.min.js"}
  %body
    %nav.navbar.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} Rails FFserver
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              = link_to "Dashboard", dashboard_path
            %li
              = link_to "Server", server_path
            %li
              %a{:href => "#about"} Configure
            %li
              %a{:href => "#contact"} About
    .container-fluid.main
      .col-md-12
        = yield
